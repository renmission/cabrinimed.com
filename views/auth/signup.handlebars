<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                        <div class="col-lg-6">
                            <div class="p-5">

                                {{> _errors }}
                                {{> _msg }}

                                <div class="text-center">
                                    <h1 class="h1 text-gray-900 mb-4">Signup</h1>
                                </div>

                                <form class="user" method="post" action="/auth/signup">
                                    <div class="form-group">
                                        <input type="text" name="name" class="form-control form-control-user"
                                            aria-describedby="nameHelp" placeholder="Enter Name..." value="{{name}}">
                                    </div>

                                    <div class="form-group">
                                        <input type="email" name="email" class="form-control form-control-user"
                                            id="exampleInputEmail" aria-describedby="emailHelp"
                                            placeholder="Enter Email Address..." value="{{email}}">
                                    </div>

                                    <div class="form-group">
                                        <input type="password" name="password" class="form-control form-control-user"
                                            id="exampleInputPassword" placeholder="Password">
                                    </div>

                                    <div class="form-group">
                                        <input type="password" name="password2" class="form-control form-control-user"
                                            id="exampleInputPassword" placeholder="Confirm Password">
                                    </div>

                                    <input type="submit" value="Login" class="btn btn-success btn-user btn-block">
                                </form>

                                <hr>
                                <div class="text-center small">
                                    already have an account, please <a href="/auth">login</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>