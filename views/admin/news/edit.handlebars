<div class="container">
    <h1 class="text-title display-3">Add Service</h1>
    <form action="/admin/news/edit/{{news.nf_id}}" method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label for="">Title: *</label>
            <input type="text" name="nf_title" class="form-control" value="{{news.nf_title}}">
        </div>

        <div class="form-group">
            <label for="">Header: *</label>
            <input type="text" name="nf_header" class="form-control" value="{{news.nf_header}}">
        </div>

        <div class="form-group">
            <label for="">Image: *</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                </div>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="inputGroupFile01"
                        aria-describedby="inputGroupFileAddon01" name="nf_img" value="{{news.nf_img}}">
                    <label class="custom-file-label" for="inputGroupFile01">Choose file, max 3mb: *</label>
                </div>

            </div>
            <img src="#" id="imgPreview" alt="" style="margin: * 50px">

            <img src="/uploads/{{news.nf_img}}" id="nf_img" alt="" width="150" style="margin: * 50px">
        </div>

        <div class="form-group">
            <label for="">Content: *</label>
            <textarea type="text" name="nf_content" class="form-control" id="editor">{{news.nf_content}}</textarea>
        </div>

        <div class="form-group">
            <label for="">Status: *</label>
            <select name="s_status" id="nf_status" class="form-control">
                {{#select news.nf_status}}
                <option value="public">Public</option>
                <option value="draft">Draft</option>
                {{/select}}
            </select>
        </div>

        <div class="form-group">
            <label for="">Keyword: *</label>
            <input type="text" name="nf_keyword" class="form-control" value="{{news.nf_keyword}}">
        </div>

        <div class="form-group">
            <label for="">Description: *</label>
            <textarea type="text" name="nf_description" class="form-control" id="editor1">{{news.nf_content}}</textarea>
        </div>


        <input type="submit" value="Submit" class="btn btn-success">

    </form>
</div>