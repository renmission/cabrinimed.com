<div class="container">

    <h1 class="title display-3">News
        <span>
            <a href="/admin/news/add" class="btn btn-success float-md-right"><i class="fa fa-plus">
                </i> Add News</a>
        </span>
    </h1>
    <br>
    <table id="example" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>News Name</th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody>
            {{#each news}}
            <tr>

                <td>{{nf_id}}</td>
                <td>{{nf_title}}</td>
                <td>
                    <a href='#' class='btn btn-primary btn-box btn-sm'><i class='fas fa-eye'> View</i></a>
                    <a href='#' class='btn btn-info btn-box btn-sm'><i class='fas fa-edit'> Edit</i></a>
                    <a href='#' class='btn btn-danger btn-box btn-sm'><i class='fas fa-trash'> Delete</i></a>
                </td>

            </tr>
            {{/each}}
        </tbody>
        <tfoot>
            <tr>
                <th>ID</th>
                <th>News Name</th>
                <th>Action</th>
            </tr>
        </tfoot>
    </table>

</div>