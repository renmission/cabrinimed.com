<div class="container">

    <h1 class="title display-3">Services
        <span>
            <a href="/admin/services/add" class="btn btn-success float-md-right"><i class="fa fa-plus">
                </i> Add Service</a>
        </span>
    </h1>
    <hr>
    <table id="example" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Services Name</th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody>
            {{#each services}}
            <tr>

                <td>{{s_id}}</td>
                <td>{{s_title}}</td>
                <td>
                    <a href='/services/{{s_slug}}' class='btn btn-primary btn-box btn-sm' style="margin-right: 15px;"><i
                            class='fas fa-eye'>
                            View</i></a>
                    <a href='/admin/services/edit/{{s_slug}}' class='btn btn-info btn-box btn-sm'><i
                            class='fas fa-edit'>
                            Edit</i></a>

                    <form action="/admin/services/{{s_id}}?_method=DELETE" method="post" class='btn btn-box'>
                        <button type="submit" class='btn btn-danger btn-box btn-sm'>
                            <i class='fas fa-trash'></i>
                            Delete
                        </button>
                    </form>

                </td>

            </tr>
            {{/each}}
        </tbody>
        <tfoot>
            <tr>
                <th>ID</th>
                <th>Services Name</th>
                <th>Action</th>
            </tr>
        </tfoot>
    </table>

</div>