<div class="container">
    <h1 class="text-title display-3">Add Service</h1>
    <form action="/admin/services" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="">Title: *</label>
            <input type="text" name="s_title" class="form-control">
        </div>
        <div class="form-group">
            <label for="">Header: *</label>
            <input type="text" name="s_header" class="form-control">
        </div>

        <div class="form-group">
            <label for="">Image: *</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                </div>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="inputGroupFile01"
                        aria-describedby="inputGroupFileAddon01" name="s_Image">
                    <label class="custom-file-label" for="inputGroupFile01">Choose file, max 3mb: *</label>
                </div>

            </div>
            <img src="#" id="imgPreview" alt="" style="margin: * 50px">

            <img src="/uploads/{{patient.s_Image}}" id="s_Image" alt="" width="150" style="margin: * 50px">
        </div>

        <div class="form-group">
            <label for="">Content: *</label>
            <textarea type="text" name="s_content" class="form-control" id="editor"></textarea>
        </div>
        <div class="form-group">
            <label for="">Status: *</label>
            <select name="s_status" id="s_status" class="form-control">
                <option value="public">Public</option>
                <option value="draft">Draft</option>
            </select>
        </div>
        <div class="form-group">
            <label for="">Keyword: *</label>
            <input type="text" name="s_keyword" class="form-control">
        </div>
        <div class="form-group">
            <label for="">Description: *</label>
            <textarea type="text" name="s_description" class="form-control" id="editor1"></textarea>
        </div>


        <input type="submit" value="Submit" class="btn btn-success">

    </form>
</div>